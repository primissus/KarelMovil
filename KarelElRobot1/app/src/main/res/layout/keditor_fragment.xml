<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout">
        <ImageView 
            android:contentDescription="@string/desc"
            android:id="@+id/newCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_code"
            android:padding="5dp"/>
        <ImageView 
            android:id="@+id/openCode"
            android:contentDescription="@string/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/open_code"
            android:padding="5dp"/>
       <!--  <ImageView 
            android:id="@+id/karelapanCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/open_code"
            android:padding="5dp"/> -->
        <ImageView 
            android:id="@+id/saveCode"
            android:contentDescription="@string/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/save_code"
            android:padding="5dp"/>
        <ImageView 
            android:id="@+id/run"
            android:contentDescription="@string/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/run"
            android:padding="5dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/editor"
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:gravity="top"
	    android:inputType="textMultiLine"
	    android:singleLine="false"
	    android:lines="2000"
        android:minLines="1"
        android:maxLines="2000"
	    android:layout_below="@id/layout"
	    android:layout_marginLeft="10dip"
	    android:layout_marginRight="10dip" />
    <ImageView
        android:contentDescription="@string/desc"
        android:id="@+id/switch_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
		android:src="@drawable/world"
        android:padding="0dp"/>
    <Button 
        android:id="@+id/tab"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_below="@id/switch_world"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="@string/tabtext"
        android:textStyle="bold"
        android:textSize="11sp"
        android:padding="0dp"/>
    <Button 
        android:id="@+id/semiColon"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_below="@id/tab"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="@string/semi_colon"
        android:gravity="center|center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="0dp"/>
    <Button 
        android:id="@+id/dash"
        android:layout_width="40dp"
        android:layout_height="34dp"
        android:layout_below="@id/semiColon"
        android:layout_marginTop="3dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text="@string/dash_"
        android:gravity="center|center_horizontal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="0dp"/>
</RelativeLayout>