<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="poodleDeveloper.karel"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:testOnly="true"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="poodleDeveloper.karel.Activities.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="poodleDeveloper.karel.Activities.KEditor" />
        <activity android:name="poodleDeveloper.tools.Karelapan" />
        <activity android:name="poodleDeveloper.tools.FilePickerActivity" />
        <activity
            android:name="poodleDeveloper.karel.Activities.KWorldGraphics"
            android:configChanges="orientation|keyboardHidden" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="poodleDeveloper.karel.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>